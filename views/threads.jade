extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Terve #{user.fullname}. Tämä on tulevalle postauksille:
						h2 Luo uusi postaus
						form(class='form-signin', action='/threads', method='POST')
							input(type='text', name='title', class='form-control', placeholder='Title',required, autofocus)
							input(type='text', name='text', class='form-control', placeholder='Text',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Post thread
							span.clearfix
						br
						br
					div.signup-wall
						- for (var i=0; i<threads.length; i++) {
						br
						a(href="/drawthread/#{threads[i]._id}") !{threads[i].title}
						- }
						br
					a(href='/reseptit', class='text-center new-account') Resepti osioon
					a(href='/home', class='text-center new-account') Profiiliin
					a(href='/signout', class='text-center new-account') Kirjaudu ulos